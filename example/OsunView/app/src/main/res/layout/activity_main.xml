            <View
                android:id="@+id/spaceTop2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_space_height"
                android:layout_below="@id/spaceTop3" />

            <View
                android:id="@+id/spaceTop1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_space_height"
                android:layout_below="@id/spaceTop2" />

            <View
                android:id="@+id/space1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_space_height"
                android:layout_below="@id/spaceTop1" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_line_border"
                android:layout_below="@id/space1" />

            <View
                android:id="@+id/space2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_space_height"
                android:layout_below="@id/line1" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_line_border"
                android:layout_below="@id/space2" />

            <View
                android:id="@+id/space3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_space_height"
                android:layout_below="@id/line2" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_line_border"
                android:layout_below="@id/space3" />

            <View
                android:id="@+id/space4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_space_height"
                android:layout_below="@id/line3" />

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_line_border"
                android:layout_below="@id/space4" />

            <View
                android:id="@+id/space5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_space_height"
                android:layout_below="@id/line4" />

            <View
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_line_border"
                android:layout_below="@id/space5" />

            <View
                android:id="@+id/spaceBottom1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_space_height"
                android:layout_below="@id/line5" />

            <View
                android:id="@+id/spaceBottom2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_space_height"
                android:layout_below="@id/spaceBottom1" />

            <View
                android:id="@+id/spaceBottom3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_space_height"
                android:layout_below="@id/spaceBottom2" />

            <View
                android:id="@+id/spaceBottom4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/osun_space_height"
                android:layout_below="@id/spaceBottom3" />

            <View
                android:layout_width="@dimen/osun_line_border"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/line5"
                android:layout_alignTop="@id/line1"
                android:background="#343434" />

