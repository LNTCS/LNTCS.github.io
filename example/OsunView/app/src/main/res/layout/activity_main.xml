<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- 구조 설명을 하면 위의 6~85번 줄 까지의 Linear 는 실질적으로 보이는 5선지 배경임 -->
    <!-- 스크롤뷰에 있는 공간들은 음표를 제 위치에 맞게 배치시켜주기 위한 보이지 않는 격자? 라고 보면 됨 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_space_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_space_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_space_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_space_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_line_border"
            android:background="#343434" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_space_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_line_border"
            android:background="#343434" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_space_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_line_border"
            android:background="#343434" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_space_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_line_border"
            android:background="#343434" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_space_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_line_border"
            android:background="#343434" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_space_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_space_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_space_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/osun_space_height" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/osunLay"
            android:layout_width="wrap_content"
